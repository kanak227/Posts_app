<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
  </head>
</head>
<body>
    <div class="w-full min-h-screen bg-zinc-900 text-white p-8">

        <a href="/logout" class="bg-red-500 rounded-md px-3 py-2 text-sm mb-5 inline-block">Log Out</a>

        <div class="flex items-start gap-3 mt-3">
            <div class="w-10 h-10rounded-md overflow-hidden">
                <img class="w-full h-full object-cover" src="/images/uploads/<%= user.profilepic %>" alt="">
            </div>
            <h1 class="mb-3 text-3xl"><span class="font-light">Hello</span> <%= user.name %></h1>
        </div>
        

        <h5>You can create a new post</h5>

        <form action="/post" method="post" class="text-white">
            <textarea class="w-1/3 resize-none bg-transparent border-2 border-zinc-200 rounded-md mt-5 p-3 outline-none block" placeholder="What's on yoour mind?" name="content"></textarea>
            <input type="submit" class="px-2 py-2 bg-blue-500 block rounded-md mt-2 w-40" value="Create new post">
        </form>

        <div class="posts mt-10 ">
            <h3 class="text-zinc-400 ">Your posts</h3>
            <div class="postcontainer mt-5">
                <% user.posts.reverse().forEach(function(post){ %>
                    <div class="post mb-4 w-1/3 p-5 border-2 border-zinc-800 rounded-md bg-zinc-800">
                    <h3 class="text-blue-500 mb-2">
                        @<%= user.username %></h3>
                    <p class="text-sm tracking-light"><%= post.content %></p>
                    <small class="mt-1 inline-block"><%= post.likes.length %></small>
                    <div class="btns flex gap-4 mt-5">
                        <a href="/like/<%= post._id %>" class="text-blue-500"><%= post.likes.indexOf(user._id) === -1 ? "Like" : "Unlike" %></a>
                        <a href="/edit/<%= post._id %>" class="text-zinc-600">Edit</a>
                    </div>
                    
                </div>
                <% }) %>
            </div>
        </div>

    </div>
</body>
</html>